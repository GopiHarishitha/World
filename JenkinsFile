pipeline {

  agent any 

  environment {
    DOCKER_IMAGE = "world_image"
  }

  stages {
    stage("Checkout") {
      steps {
        git branch: 'main', url: 'https://github.com/GopiHarishitha/World.git'
      }
    }

    stage("build") {
      steps {
        bat "docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} -f Dockerfile ."
      }
    }

    stage("Run Container") {
      steps {
        script {
          bat "docker run -d --name --worldapp -p 8080:8080 ${DOCKER_IMAGE}:${BUILD_NUMBER}"
        }
      }
    }
  }

  post {
    success {
      echo "Checkout, Build, Dockerize and Deploy completed successfully"
    }
    failure {
      echo "Build failed"
    }
  }

}
